<h3><%= @application.name %></h3>
<h4><%= @application.street_address %></h4>
<h4><%= @application.city %></h4>
<h4><%= @application.state %></h4>
<h4><%= @application.zip_code %></h4>
<p><%= @application.endorsement %></p>
<h5>Application Status: In Progress</h5>

<section>
<p>Add a Pet To This Application</p>
<%= form_with url: "/applications/#{@application.id}", method: :get, local: true, data: {turbo: false} do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>
<% @pets.each do |pet| %>
  <h3><%= pet.name %></h3>
  <p>Age: <%= pet.age %></p>
  <p>Breed: <%= pet.breed %></p>
<% end %>
</section>